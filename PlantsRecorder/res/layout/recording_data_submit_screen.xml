<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/homeButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="home" />
        
        <TextView
            android:id="@+id/speciesDetailsMess"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_below="@+id/homeButton5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Data from the recording:"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/nameOfTheRecording"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speciesDetailsMess"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Name of the recording"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/locationData"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameOfTheRecording"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Location data"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/commentsDisplay"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationData"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Comments"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <Button
            android:id="@+id/listOfSpecimensButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commentsDisplay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="List of specimens"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/photoMess"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_below="@+id/listOfSpecimensButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Photograph of the site"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <ImageView
            android:id="@+id/sitePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photoMess" />
            
            <Button
            android:id="@+id/submitButton"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_below="@+id/sitePhoto"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="SUBMIT" />
        
    </RelativeLayout>

</ScrollView>